{
  "name": "chronoarc/marvel",
  "description": "A PHP wrapper for Marvel's API",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Ivanka Todorova",
      "email": "iv@itodorova.dev"
    }
  ],
  "keywords": [
    "php",
    "marvel",
    "sdk"
  ],
  "require": {
    "php": ">=8.2",
    "saloonphp/saloon": "^v3.10",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "symfony/var-dumper": "^7.1",
    "pestphp/pest": "^3.5"
  },
  "autoload": {
    "psr-4": {
      "Chronoarc\\Marvel\\": "src/",
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "test": "./vendor/bin/pest"
  }
}
